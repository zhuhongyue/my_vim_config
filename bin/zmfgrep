#!/bin/bash
args=$*

option=1
reg=2
if [ ${args:0:1} = "-" ]; then
    path_arg=3
else
    path_arg=2
    option=11
    reg=1
fi
echo -e  "\033[36mfind ${!path_arg} -iname \"*Makefile\" | xargs grep --color -n ${!option} "${!reg}" \033[0m"
find ${!path_arg}  \( -iname '*Makefile' -o -iname '*.makefile' \) | xargs grep --color -n ${!option} "${!reg}"
